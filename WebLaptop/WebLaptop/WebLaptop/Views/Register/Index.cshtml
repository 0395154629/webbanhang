<style>
    .gradient-custom-2 {
        /* fallback for old browsers */
        background: #fccb90;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
    }

</style>
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-12">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://laptopvui.com/wp-content/uploads/2018/10/LOGO.png"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">Chào mừng đến với Laptop Vui :)</h4>
                                </div>

                                <form>
                                    <p>Đăng ký để có thể đặt hàng ngay!</p>
                                    <div class="row">
                                        <div class="form-outline col-lg-12 ">
                                            <label class="form-label" for="fullname">Họ tên đầy đủ</label>
                                            <input type="text" id="fullname" class="form-control"
                                                   placeholder="Họ tên đầy đủ" />
                                        </div>
                                    </div>
                                
                                    <div class="row">
                                        <div class="form-outline col-lg-6">
                                            <label class="form-label" for="Username">Username</label>
                                            <input type="text" id="Username" class="form-control"
                                                   placeholder="Tên tài khoản" />
                                        </div>

                                        <div class="form-outline col-lg-6">
                                            <label class="form-label" for="password">Password</label>
                                            <input type="password" id="password" placeholder="Mật khẩu" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">

                                
                                    <div class="form-outline mb-4 col-lg-6">
                                            <label class="form-label" for="phone">Số điện thoại</label>
                                            <input type="number" id="phone" placeholder="Số điện thoại" class="form-control" />
                                    </div>
                                    <div class="form-outline mb-4 col-lg-6">
                                            <label class="form-label" for="email">Email</label>
                                            <input type="email" id="email" placeholder="Email" class="form-control" />
                                    </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-outline col-lg-12">
                                            <label class="form-label" for="country">Quốc gia</label>
                                            <input type="text" id="country" placeholder="Viet Nam" class="form-control" />
                                        </div>
                                    </div>
                                  
                                    <div class="row">

                                        <div class="form-outline col-lg-4">
                                            <label class="form-label" for="city">Thành phố</label>
                                            <input type="text" id="city" placeholder="City" class="form-control" />
                                        </div>
                                        <div class="form-outline col-lg-4">
                                            <label class="form-label" for="distrist">Quận huyện</label>
                                            <input type="text" id="distrist" placeholder="Quận" class="form-control" />
                                        </div>
                                        <div class="form-outline col-lg-4">
                                            <label class="form-label" for="ward">Phường xã</label>
                                            <input type="text" id="ward" placeholder="Quận" class="form-control" />
                                        </div>
                                    </div>
                                   
                                    <div class="form-outline">
                                        <label class="form-label" for="address">Địa chỉ</label>
                                        <input type="text" id="address" placeholder="Địa chỉ" class="form-control" />
                                    </div>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button onclick="Register()" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="button">
                                            Đăng ký
                                        </button>
                                        <a class="text-muted" href="@Url.Action("Index", "Login")">Quay lại đăng nhập?</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts {
    <script>
        function Register() {
            const formData = new FormData();
            formData.append('fullname', $('#fullname').val());
            formData.append('Username', $('#Username').val());
            console.log($('#username').val());
            formData.append('password', $('#password').val());
            formData.append('phone', $('#phone').val());
            formData.append('email', $('#email').val());
            formData.append('country', $('#country').val());
            formData.append('city', $('#city').val());
            formData.append('distrist', $('#distrist').val());
            formData.append('ward', $('#ward').val());
            formData.append('address', $('#address').val());
            formData.append('role', 'User');
            let jsonData = formDataToJson(formData);
            console.log(jsonData);
            Action(
                'https://localhost:44388/api/Account/Register',
                'POST',
                jsonData
            );

        }
    </script>
}