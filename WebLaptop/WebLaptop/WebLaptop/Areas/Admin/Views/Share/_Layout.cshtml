<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/myLib/css/bootstrap.css" rel="stylesheet" />
    <link href="~/myLib/css/responsive.css" rel="stylesheet" />
    <link href="~/myLib/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style></style>
</head>
<body>
    <div class="d-flex">
        <div class="d-flex flex-column  p-3 text-white bg-dark col-lg-2" style="width: 280px;height:100vh">
            <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-4">Danh mục quản lý</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index","AdminProduct")" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminProduct" ? "active" : "")">
                        Quản lý sản phẩm
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Order")" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Order" ? "active" : "")">
                        Quản lý đơn hàng
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Category")" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Category" ? "active" : "")">
                        Quản lý danh mục
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Account")" class="nav-link text-white @(ViewContext.RouteData.Values["Controller"].ToString() == "Account" ? "active" : "")">
                        Quản lý tài khoản
                    </a>
                </li>
            </ul>
            <hr>
         
        </div>
        <div class="col-lg-10 ml-3">
            @RenderBody()
        </div>
    </div>

    <link href="~/myLib/js/bootstrap.js" rel="stylesheet" />
    <link href="~/myLib/js/popper.min.js" rel="stylesheet" />
    <link href="~/myLib/js/jquery-3.4.1.min.js" rel="stylesheet" />
    <link href="~/myLib/js/custom.js" rel="stylesheet"/>
    <script src="~/myLib/js/CURD_Function.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
   
</body>
</html>
